{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      // when adding a path here, remeber to add one in "_moduleAliases" in package.json also (replace 'src' with 'lib')
      "@declarations": ["src/declarations"],
      "@src/*": ["src/*"],
      "@services/*": ["src/services/*"],
      "@common/*": ["src/common/*"],
      "@user-model": ["src/services/users/model"],
      "@logger": ["src/logger"]
    }
  },
  "exclude": [
    "test",
    "node_modules"
  ]
}
